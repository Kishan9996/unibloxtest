generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("APP_DATABASE_URL")
}

model User {
  id                       String   @id @default(uuid())
  name                     String
  email                    String   @unique
  password                 String
  isLoggedIn               Boolean  @default(false)
  loginSecrete             String?
  discountApplicationCount Int      @default(0)
  role                     String   @default("USER") // String instead of enum
  createdAt                DateTime @default(now()) // Automatically set to the current timestamp on creation
  updatedAt                DateTime @updatedAt // Automatically updated every time the record is modified

  carts        Cart[]
  orders       Order[]
  DiscountCode DiscountCode[]
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  stock     Int      @default(0)
  createdAt DateTime @default(now()) // Automatically set to the current timestamp on creation
  updatedAt DateTime @updatedAt // Automatically updated every time the record is modified

  carts CartItem[]
}

model Cart {
  id         String   @id @default(uuid())
  userId     String   @unique
  checkedOut Boolean  @default(false)
  createdAt  DateTime @default(now()) // Automatically set to the current timestamp on creation
  updatedAt  DateTime @updatedAt // Automatically updated every time the record is modified

  user  User       @relation(fields: [userId], references: [id])
  items CartItem[]
  Order Order[]
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  productId String
  price     Float
  quantity  Int      @default(1)
  createdAt DateTime @default(now()) // Automatically set to the current timestamp on creation
  updatedAt DateTime @updatedAt // Automatically updated every time the record is modified

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model DiscountCode {
  id                String   @id @default(uuid())
  isRedeemed        Boolean  @default(false)
  isApprovedByAdmin Boolean  @default(false)
  orderId           String?  @unique
  userId            String
  discountValue     Float    @default(10.0)
  createdAt         DateTime @default(now()) // Automatically set to the current timestamp on creation

  user User @relation(fields: [userId], references: [id])

  Order Order[]
}

model Order {
  id             String  @id @default(uuid())
  userId         String
  user           User    @relation(fields: [userId], references: [id])
  cartId         String
  totalAmount    Float
  discountCodeId String?

  cart         Cart          @relation(fields: [cartId], references: [id])
  discountCode DiscountCode? @relation(fields: [discountCodeId], references: [id])
  createdAt    DateTime      @default(now()) // Automatically set to the current timestamp on creation
}
